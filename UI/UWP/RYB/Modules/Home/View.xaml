<Page x:Class="XElement.RedYellowBlue.UI.UWP.Modules.HomePage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="d" 

      xmlns:toolkit="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot>
            <PivotItem>
                <PivotItem.Header>
                    <StackPanel 
                                Orientation="Vertical">
                        <FontIcon 
                                  Glyph="&#xE1C9;" 
                        />  <!-- alternatives: xE1C9 xE772 -->
                        <TextBlock 
                                   x:Uid="Home_Tabs_Devices" 
                        />
                    </StackPanel>
                </PivotItem.Header>

                <ListView 
                          ItemsSource="{Binding Path=DeviceVMs}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <toolkit:HeaderedTextBlock 
                                                           Header="&lt;MANUFACTURER:&gt;" 
                                                           Text="{Binding Path=Manufacturer}" 
                                />
                                <toolkit:HeaderedTextBlock 
                                                           Header="&lt;PRODUCT NAME:&gt;" 
                                                           Text="{Binding Path=ProductName}" 
                                />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </PivotItem>

            <PivotItem>
                <PivotItem.Header>
                    <StackPanel 
                                Orientation="Vertical">
                        <FontIcon 
                                  Glyph="&#xE1CE;" 
                        />
                        <TextBlock 
                                   x:Uid="Home_Tabs_Favorites" 
                        />
                    </StackPanel>
                </PivotItem.Header>

                <TextBlock 
                           x:Uid="COMMON_AvailableSoon" 
                />
            </PivotItem>

            <PivotItem>
                <PivotItem.Header>
                    <StackPanel 
                                Orientation="Vertical">
                        <FontIcon 
                                  Glyph="&#xE8CC;" 
                        />  <!-- alternatives: xE8CC xEBD2 -->
                        <TextBlock 
                                   x:Uid="Home_Tabs_Groups" 
                        />
                    </StackPanel>
                </PivotItem.Header>

                <TextBlock 
                           x:Uid="COMMON_AvailableSoon" 
                />
            </PivotItem>
        </Pivot>
    </Grid>

</Page>
