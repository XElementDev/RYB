<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 

                    xmlns:converters="using:XElement.RedYellowBlue.UI.UWP.Converters">

    <converters:BoolToVisibilityConverter x:Key="FalseToCollapsedVisibilityConverter" 
                                          FalseValue="Collapsed" 
                                          NullValue="Collapsed" 
                                          TrueValue="Visible" 
    />

    <converters:BoolToVisibilityConverter x:Key="TrueToCollapsedVisibilityConverter" 
                                          FalseValue="Visible" 
                                          NullValue="Collapsed" 
                                          TrueValue="Collapsed" 
    />

</ResourceDictionary>
